<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/infoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правила игры простые вам нужно крутить барабан и зарабатывать очков.Тут будут отображаться история ваших вращений"
        android:fontFamily="@font/pattaya"
        android:textSize="20sp"
        android:textColor="@color/black"
   android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/commonCountTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/pattaya"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/infoTxt"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/commonCountTxt"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>